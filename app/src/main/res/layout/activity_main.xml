<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://robobinding.org/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.suhj.banpo.Activities.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black_bg">
        <!-- 메뉴가 들어갈 부분 -->
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:focusable="false">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/separator_container">
                <TextView
                    style="@style/separator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/meal"/>
                <include
                    layout="@layout/include_more_button"
                    android:id="@+id/btn_main_navigate_meal"
                    android:clickable="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                bind:source="{todayMeals}"
                bind:itemLayout="@layout/template_meal"
                android:orientation="vertical">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/separator_container">
                <TextView
                    style="@style/separator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule"/>
                <include
                    layout="@layout/include_more_button"
                    android:id="@+id/btn_main_navigate_schedule"
                    android:clickable="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이번 주 학사일정이 없습니다"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                bind:visibility="{isWeekScheduleEmpty}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginBottom="24dp"
                bind:source="{weekSchedules}"
                bind:itemLayout="@layout/template_schedule"
                android:divider="#00000000"
                android:listSelector="@android:color/transparent"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
