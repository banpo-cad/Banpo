<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://robobinding.org/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.suhj.banpo.Activities.HomeActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_scroll_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="beforeDescendants">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:shrinkColumns="0"
                android:background="#00b2d9"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                bind:visibility="{noticeShow}"
                bind:onClick="NavigateNotice">
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        bind:text="{noticeTitle}"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        bind:text="{noticeButtonContent}"
                        android:textColor="#00b2d9"
                        android:textSize="16sp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_gravity="right|bottom"
                        android:background="#fff"
                        android:layout_weight="1"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:background="@color/black_bg">
                <TableRow>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="12dp"
                        bind:onClick="NavigateMeal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_meal_yellow"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/meal"
                            android:textSize="16dp"
                            android:textColor="@color/yellow"
                            android:layout_marginLeft="5dp"
                            android:padding="3dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        bind:onClick="NavigateSchedule">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_calendar_green"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/schedule"
                            android:textSize="16dp"
                            android:textColor="@color/green"
                            android:layout_marginLeft="5dp"
                            android:padding="3dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        bind:onClick="NavigateSchoolInfo">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_book"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/information"
                            android:textSize="16dp"
                            android:textColor="@color/orange"
                            android:layout_marginLeft="5dp"
                            android:padding="3dp"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:focusable="false">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/separator_container">
                    <TextView
                        style="@style/separator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal"/>
                    <include
                        layout="@layout/include_more_button"
                        android:id="@+id/btn_main_navigate_meal"
                        android:clickable="true"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    bind:source="{todayMeals}"
                    bind:itemLayout="@layout/template_meal"
                    android:orientation="vertical">
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/separator_container">
                    <TextView
                        style="@style/separator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/schedule"/>
                    <include
                        layout="@layout/include_more_button"
                        android:id="@+id/btn_main_navigate_schedule"
                        android:clickable="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이번 주 학사일정이 없습니다"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    bind:visibility="{isWeekScheduleEmpty}"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginBottom="24dp"
                    bind:source="{weekSchedules}"
                    bind:itemLayout="@layout/template_schedule"
                    android:divider="#00000000"
                    android:listSelector="@android:color/transparent"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
